
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cadastro</title>
    <link rel="stylesheet"
          href="~/Content/EstoqueCadastro.css" />
</head>
<body>
    <div class="div-titulo"> 
        <a href="/estoque"
           class="titulo">Lista de Estoque</a>
    </div>

    <form action="/estoque/store" method="post">
        <div class="div-campo">
            <label for="campo-nome">Nome</label>
            <input type="text" name="nome" id="campo-nome"
                   class="campo"/>
        </div>
        <div class="div-campo">
            <label for="campo-quantidade">Quantidade</label>
            <input type="text" name="quantidade" 
                   class="campo" id="campo-quantidade" />
        </div>
        <div class="div-campo">
            <label for="campo-valor">Valor</label>
            <input type="text" name="valor" 
                   class="campo" id="campo-valor" />
        </div>
        <button type="submit" class="botao">Salvar</button>
    </form>
</body>
</html>
